<link href='https://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>

<h1>Pictures</h1>
<%= link_to "New Picture", "/pictures/new" %>

<ul>
  <% @pictures.each do |picture| %>
    <li class="image">
      <p><div class="index-title"><%=  picture[:title] %>,</div> <div class="index-artist"><%= picture[:artist] %></div></p>
      <%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
      <!-- image_tag takes in the url property of the picture (the raw url) in order to render the image. -->
    </li>
  <% end %>
</ul>
